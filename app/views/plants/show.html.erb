
<section class="show">
  <div class="row">
    <div class="col s6">
      <h2><%= @plant.name %></h2>
      <h4><%= @plant.science %></h4>
      <p><%= @plant.description %></p>
    </div>
    <div class="col s6">
      <img class='plant-show' src="<%=@plant.img_url%>" />
        <% if current_user %>
        <%=render 'greenform'%>
        <% end %>
    </div>
  </div>
  <a id="back-link" href="/plants">Back to Plants</a>
</section
